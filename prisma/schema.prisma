generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE")
}

type Settings {
  autoEmbed     Boolean @default(true)
  deleteOrigin  Boolean @default(false)
  suppressEmbed Boolean @default(true)
}

model Guild {
  id          String       @id @map("_id") @db.ObjectId
  conversions Conversion[]

  settings        Settings
  lastConvertedAt DateTime @default(now())
  createdAt       DateTime @default(now())
}

model User {
  id          String       @id @map("_id") @db.ObjectId
  conversions Conversion[]

  votes           Int      @default(0)
  lastVotedAt     DateTime @default(now())
  lastConvertedAt DateTime @default(now())
  createdAt       DateTime @default(now())
}

model Conversion {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  tiktok String

  User  User  @relation(fields: [user], references: [id])
  Guild Guild @relation(fields: [guild], references: [id])

  user  String
  guild String

  createdAt DateTime @default(now())
}
