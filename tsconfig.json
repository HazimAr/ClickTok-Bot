{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "/",
    "strict": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },

  "include": ["./**/*.ts"],
  "exclude": ["dist", "node_modules"],
}
