{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "exclude": ["dist", "node_modules", "tests"]
}
